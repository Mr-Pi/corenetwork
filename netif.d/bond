#!/bin/sh

netif_pre_up() {
        require slaves
        for ipnm in $ipaddr $ipaddrs; do
                ip addr add $ipnm dev $interface || die "Couldn't add $ipnm to $interface"
        done
}

netif_post_up() {
        ifenslave $interface ${slaves//net./}
}

netif_pre_down() {
        ifenslave -d $interface ${slaves//net./}
}
