start() {
        ebegin "Bringing up network interface lo"
	ip link set lo up
	ip route add 127.0.0.0/8 dev lo scope host
        eend $?
}

stop() {
        ebegin "Shutting down network interface lo"
	ip route del 127.0.0.0/8 dev lo scope host
        ip link set lo down
        eend $?
}
